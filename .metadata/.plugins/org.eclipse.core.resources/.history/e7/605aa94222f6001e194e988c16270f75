package Week5;

public class Application {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		// List<String> list = ArrayList<String>();
		// interface on left and class name on right side
		// Logger logger = new ConsoleLogger();
				//cannot instantiate = new Logger because it's an interface
				// it needs a concrete class that implements it 
				// so say = new ConsoleLogger
		
		//ANY implementation of logger we can swap out because they all have the same methods on them
		// console logger or file logger for example
		Logger logger = new ConsoleLogger();
		
		logger.info("Hello");
		logger.warning("This is a warning");
		logger.error("Oops, this is an error");
		logger.fatal("Fatal error");
		logger.close();
		
		
	}

}
