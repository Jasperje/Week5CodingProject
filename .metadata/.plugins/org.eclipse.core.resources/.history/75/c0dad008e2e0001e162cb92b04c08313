package week02classlooppractice;

public class week02classlooppractice {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		// for loops is always 
		//  part 1 - initializer (where the loop starts - starting at 0 or 1, ex) ;
		//part 2 - condition
		//part 3 - increment
		//lines of code you repeat - you can even nest a loop inside a loop! whoa. but tough to keep track of
		
		
		for (int count = 10; count > 0; count = count-1) {
			
			//shorthand count -=1 means count = count-1
			// shorthand count += means count = count+1
			
			System.out.printf("%d...%n", count);
			
			
		}
		System.out.println("BLAST OFF!");
		
		
	}

}
